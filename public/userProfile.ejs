<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles_popup.css">
    <link rel="stylesheet" href="/css/styles_normal.css">
    <title><%=name %></title>
</head>

<body>
    <div class="container">
        <header>
          <div class="home-icon">
            <!-- <a href="/home" title="switcher">
                <img src="#" alt="home-logo">
            </a> -->
          </div>
        </header>
        <main>
          <div class="row">
            <div class="profile-div">
                <div class="photo">
                    <img class="profile-pic" src="https://avatarfiles.alphacoders.com/166/166959.jpg"/>
                </div>
                <h4 class="name"><%= name %> </h4>
                <p class="info"><%= index %> </p>
                <p class="info"><%= phone %> </p>
                <p class="info"><%= email %> </p>
                <p class="info"><%= faculty %> </p>
            </div>
            <div class="navigation">
                <ul class="nav">
                    <li>Settings</li>
                    <li>Notifications</li>
                    <li>Log out</li>
                </ul>
                <div class="request-tiles">

                    <button class="button" onclick="openForm(0)">
                        <p class="button__text">Add/Drop Requests</p>
                    </button>
                    
                    <%- include('./assets/partials/popupForm.ejs') %>

                    <button class="button" onclick="openForm(1)">
                        <p class="button__text">Submission Deadline</p>
                    </button>
                    
                    <%- include('./assets/partials/popupForm.ejs') %>

                    <button class="button" onclick="openForm(2)">
                        <p class="button__text">Repeat Exams</p>
                    </button>
                    
                    <%- include('./assets/partials/popupForm.ejs') %>

                </div>
            </div>
          </div>
          </main>
        </main>
    </div>

    <%- include('./assets/partials/footer.ejs') %>

    <script src="/javascript/popupForm.js"></script>
</body>
</html>