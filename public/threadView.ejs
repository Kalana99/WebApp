<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles_threadView.css">
    <link rel="stylesheet" href="/css/styles_popup.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/loading_animations.css">
    <title>Thread View</title>
</head>
<body>
    <header>
        <nav class="navigation">
            <ul class="navigation-list">
                <li><a href="/userprofile">Home</a></li>
                <li><a href="#">Contact</a></li>
                <li><a href="#">About</a></li>
            </ul>
        </nav>
        <h1>REQUESTS</h1>
        <div class="reply-btn-group">
            <button id="replyButton" class="replyBtn">Reply</button>
            <button id="acceptButton" class="acceptBtn">Accept</button>
            <button id="declineButton" class="declineBtn">Decline</button>
        </div>

        <%- include('./assets/partials/popup_reply.ejs') %>

    </header>
    <section>
        <div class="tab">
            <button class="tablinks" id="all">All</button>
            <button class="tablinks" id="active">Active</button>
            <button class="tablinks" id="accepted">Accepted</button>
            <button class="tablinks" id="declined">Declined</button>
            <button class="tablinks" id="unread">Unread</button>
        </div>
        <div class="column left">
            <div class="search-bar">
                <input type="text" placeholder="Search.." class="searchText">
                <button type="button" class="searchButton">
                    <i class="fa fa-search"></i>
                </button>
            </div>
            <div class="buttonContainer">
                <!-- loading animation -->
                <div class="overlay">
                    <div class="square">
                        <div></div>
                        <div></div>
                    </div>
                </div>

                <div class="message-list-item">
                    <div class="btn-group">
                        <!-- threads will be added here via js-->
                    </div>
                </div>
            </div>
            <div class="pageNav">
                <button id="leftButton"><</button>
                <input type="text" id="pageSelector">
                <span id="divider">/</span>
                <span id="numOfPages">1</span>
                <button id="rightButton">></button>
            </div>
        </div>
        <div class="column right">
            <div class="message-list">
                <div class="msg-group">
                    <!-- messages in threads will appear here via js-->
                </div>
            </div>
        </div>
    </section>
    <script src="/javascript/threadView.js"></script>
    <script src="/javascript/formController.js"></script>
    <footer><h2>Copyright</h2></footer>
</body>
</html>